---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const photos = (await getCollection('photos')).sort(
	(a, b) => b.data.capturedDate.valueOf() - a.data.capturedDate.valueOf(),
);

const featuredPosts = posts.slice(0, 2);
const featuredPhotos = photos.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero page-intro">
				<div>
					<p class="tagline">Learning in public.</p>
					<h1>George Davis</h1>
					<p>
						Monospaced stories, daylight photographs, and quiet systems. I write about building products
						and collect photos from the spaces in between.
					</p>
					<a href="/about">Read the short intro</a>
				</div>
				<div class="hero-card">
					<h2>Now</h2>
					<p>
						Reviewing a year of notes, planning a photo road trip, and sharpening the systems I use to
						ship.
					</p>
					<p class="card-meta">Updated weekly</p>
				</div>
			</section>

			<section>
				<div class="section-title">
					<span>Latest writing</span>
					<a href="/blog">View all</a>
				</div>
				<div class="grid stagger">
					{
						featuredPosts.map((post, index) => (
							<a class="card" href={`/blog/${post.id}/`} style={`--i:${index}`}>
								<h3 class="card-title">{post.data.title}</h3>
								<p>{post.data.description}</p>
								<p class="card-meta">
									<FormattedDate date={post.data.pubDate} />
								</p>
							</a>
						))
					}
				</div>
			</section>

			<section>
				<div class="section-title">
					<span>Photo stream</span>
					<a href="/photos">View all</a>
				</div>
				<div class="grid photo-grid stagger">
					{
						featuredPhotos.map((photo, index) => (
							<a class="card" href={`/photos/${photo.id}/`} style={`--i:${index}`}>
								<Image src={photo.data.heroImage} alt={photo.data.title} width={600} height={450} />
								<h3 class="card-title">{photo.data.title}</h3>
								<p class="card-meta">{photo.data.location ?? 'On the road'}</p>
							</a>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
